<p style="color: green"><%= notice %></p>

<div class="card">
  <div class="card-header">
    <h3>
      Board #<%= @board.id %>
      <%= link_to "Boards list", boards_path, class: "btn btn-link" %>
      <%= link_to "Generate Board", new_board_path, class: "btn btn-link" %>
    </h3>
  </div>

  <div class="card-body" style="overflow: auto" id="<%= dom_id @board %>">
    <table class="table table-bordered">
      <tr>
        <th>Creator:</th>
        <td><%= @board.user.email %></td>
      </tr>

      <tr>
        <th>Name:</th>
        <td><%= @board.name %></td>
      </tr>

      <tr>
        <th>Size:</th>
        <td><%= "#{@board.width}x#{@board.height}" %></td>
      </tr>

      <tr>
        <th>Num of mines:</th>
        <td><%= @board.num_of_mines %></td>
      </tr>

      <tr>
        <th>Grid</th>
        <td>
          <table class="table table-borderless grid">
            <% JSON.parse(@board.grid).each do |row| %>
              <tr>
                <% row.each do |col| %>
                  <td class="<%= col.present? ? 'mine' : '' %>">
                    <%= (col.present? ? '&#128163;' : '&#9633;').html_safe %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </table>
        </td>
      </tr>
    </table>

    <%= link_to "Boards list", boards_path, class: "btn btn-link" %>
    <%= link_to "Generate Board", new_board_path, class: "btn btn-link" %>
  </div>
</div>