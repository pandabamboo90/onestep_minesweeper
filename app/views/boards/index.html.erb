<p style="color: green"><%= notice %></p>

<div class="card">
  <div class="card-header">
    <h2>Boards list<%= link_to "New board", new_board_path, class: "btn btn-link" %></h2>
  </div>
  <div class="card-body">
    <table class="table">
      <thead class="table-dark">
      <tr>
        <th>#</th>
        <th>Creator</th>
        <th>Name</th>
        <th>Size</th>
        <th>Num of mines</th>
        <th>Created At</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @boards.each do |board| %>
        <tr>
          <td><%= board.id %></td>
          <td><%= board.user.email %></td>
          <td><%= board.name %></td>
          <td><%= "#{board.width}x#{board.height}" %></td>
          <td><%= board.num_of_mines %></td>
          <td><%= board.created_at %></td>
          <td><%= link_to "View", board %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <%= render 'pagy/bootstrap_nav', pagy: @pagy %>
    <%= link_to "New board", new_board_path, class: "btn btn-link" %>

  </div>
</div>
